{
  "name": "bahamut-sign-helper-script",
  "description": "巴哈姆特簽到腳本（每日、公會、動畫瘋）",
  "license": "MIT",
  "version": "6.0.0-pre.1",
  "private": true,
  "author": {
    "name": "moontai0724"
  },
  "homepage": "https://github.com/moontai0724/",
  "bugs": {
    "url": "https://github.com/moontai0724/bahamut-sign-helper-script/issues"
  },
  "user-script-meta": {
    "name": "巴哈姆特簽到腳本（每日、公會、動畫瘋）",
    "namespace": "https://home.gamer.com.tw/moontai0724",
    "match": [
      "https://*.gamer.com.tw/*"
    ],
    "grant": [
      "GM_xmlhttpRequest",
      "GM_setValue",
      "GM_getValue"
    ],
    "connect": [
      "api.gamer.com.tw",
      "guild.gamer.com.tw"
    ],
    "noframes": ""
  },
  "type": "module",
  "scripts": {
    "dev": "nodemon scripts/webdav.ts",
    "build": "pnpm build:view && pnpm build:script",
    "build:view": "vue-tsc -p views && vite build",
    "build:script": "rollup -c --configPlugin typescript --bundleConfigAsCjs",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check --ignore-unknown .",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@rushstack/eslint-patch": "^1.7.0",
    "@types/node": "^20.11.5",
    "@types/tampermonkey": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-airbnb-with-typescript": "^8.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.1.0",
    "eslint-plugin-vue": "^9.20.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "rollup": "^4.9.5",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-license": "^3.2.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^1.0.0",
    "vue-tsc": "^1.8.25"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache --cache-location node_modules/.cache/eslint",
    "*.**": "prettier --check --ignore-unknown"
  }
}
