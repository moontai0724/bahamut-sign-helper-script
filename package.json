{
  "name": "bahamut-sign-helper-script",
  "description": "巴哈姆特簽到腳本（每日、公會、動畫瘋）",
  "license": "MIT",
  "version": "6.0.0-pre.1",
  "private": true,
  "author": {
    "name": "moontai0724"
  },
  "homepage": "https://github.com/moontai0724/bahamut-sign-helper-script",
  "bugs": {
    "url": "https://github.com/moontai0724/bahamut-sign-helper-script/issues"
  },
  "user-script-meta": {
    "name": "巴哈姆特簽到腳本（每日、公會、動畫瘋）",
    "namespace": "https://home.gamer.com.tw/moontai0724",
    "match": [
      "https://*.gamer.com.tw/*"
    ],
    "grant": [
      "GM_getResourceText",
      "GM_xmlhttpRequest",
      "GM_setValue",
      "GM_getValue"
    ],
    "connect": [
      "api.gamer.com.tw",
      "guild.gamer.com.tw",
      "script.google.com",
      "script.googleusercontent.com",
      "ani.gamer.com.tw",
      "home.gamer.com.tw"
    ],
    "noframes": ""
  },
  "type": "module",
  "scripts": {
    "dev": "nodemon scripts/webdav.ts",
    "preview": "concurrently --kill-others \"http-server dist/pages -p 8080\" \"vite build -w\"",
    "build": "pnpm build:view && pnpm build:script",
    "build:view": "node --loader ts-node/esm scripts/build-views.ts",
    "build:script": "rollup -c --configPlugin typescript --bundleConfigAsCjs",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check --ignore-unknown .",
    "prepare": "husky install"
  },
  "dependencies": {
    "primevue": "^3.48.1",
    "vue": "^3.4.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@rollup/pluginutils": "^5.1.0",
    "@rushstack/eslint-patch": "^1.7.2",
    "@types/html-minifier": "^4.0.5",
    "@types/node": "^20.11.19",
    "@types/tampermonkey": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-airbnb-with-typescript": "^8.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.1.0",
    "eslint-plugin-vue": "^9.21.1",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "rollup": "^4.12.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-singlefile": "^2.0.0",
    "vue-tsc": "^1.8.27"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache --cache-location node_modules/.cache/eslint",
    "*.**": "prettier --check --ignore-unknown"
  }
}
